<ProcessSpecification name="PIP3B3DistributeShipmentStatus" nameID="urn:rosettanet:specification:interchange:PIP3B3:xml:bpss:v11_00" version="V11.00" xmlns="http://www.ebxml.org/BusinessProcess/1.01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ebxml.org/BusinessProcess ebBPSS1.01.xsd">
	<Documentation>The purpose of this PIP is to 1) automate shipment status information exchanges between the supply chain partners, 2) improve information exchange quality and efficiency when gathering shipment status data, 3) save time and reduce processing costs, 4) reduce workload in supply chain by introducing a common global approach for sharing shipment status data across the full high-tech supply chain.</Documentation>
	<!--REM: Shipment Status Distribution Document-->
	<BusinessDocument name="Shipment Status Distribution" nameID="PIP3B3ShipmentStatusDistribution" specificationLocation="urn:rosettanet:specification:interchange:ShipmentStatusDistribution:xsd:schema:1.0">
		<Documentation>The document is an XML Schema file that specifies the rules for creating the XML document for the distribution business action of  shipment status. The specificationLocation attribute is used for illustrative purposes only.</Documentation>
	</BusinessDocument>
	<Package name="Order Management" nameID="3">
		<Documentation>Defines Cluster</Documentation>
		<Package name="Transportation and Distribution" nameID="3B">
			<Documentation>Defines Segment</Documentation>
			<Package name="Distribute Shipment Status" nameID="3B3">
				<Documentation>Defines PIP</Documentation>
				<BusinessTransaction name="Distribute Shipment Status" nameID="DistributeShipmentStatus_BT" isGuaranteedDeliveryRequired="true">
					<RequestingBusinessActivity name="Shipment Status Distribution Action" nameID="ShipmentStatusDistributionAction" isAuthorizationRequired="false" isIntelligibleCheckRequired="true" isNonRepudiationReceiptRequired="false" isNonRepudiationRequired="false" timeToAcknowledgeReceipt="PT2H" retryCount="3">
						<DocumentEnvelope name="Shipment Status Distribution" nameID="ShipmentStatusDistribution_DE" businessDocument='//BusinessDocument[@name="Shipment Status Distribution"]' businessDocumentIDREF="PIP3B3ShipmentStatusDistribution" isAuthenticated="persistent" isConfidential="transient" isTamperDetectable="persistent"/>
					</RequestingBusinessActivity>
					<RespondingBusinessActivity name="Process Shipment Status Distribution" nameID="ProcessShipmentStatusDistribution"/>
				</BusinessTransaction>
				<!--REM: Binary Collaborations-->
				<BinaryCollaboration name="Distribute Shipment Status" nameID="DistributeShipmentStatus_BC" initiatingRoleIDREF="TransportServiceProviderID" preCondition="true" postCondition="true">
					<Documentation>The PIP Start State is comprised of the following conditions: a. TPA Approved and Exist In Backend System b. Sending Partner Exist as Party and Valid c. Receiving Partner Exist as Party d. Business Document Exist In Backend System,  and Valid</Documentation>
					<Documentation>The PIP End States are comprised of the following conditions: a. Acknowledgment of Receipt Exist In Backend System and Valid ; PIP Failure State: a. NOT Successful b. Retry Count Exceeded</Documentation>
					<Role name="TransportServiceProvider" nameID="TransportServiceProviderID"/>
					<Role name="In-transitInformationUser" nameID="In-transitInformationUserID"/>
					<Start nameID="Start_ST" toBusinessState='../BusinessTransactionActivity[@name="Distribute Shipment Status"]' toBusinessStateIDREF="PIP3B3ShipmentStatusDistribution"/>
					<BusinessTransactionActivity name="Distribute Shipment Status" nameID="DistributeShipmentStatus_BTA" businessTransaction='//BusinessTransaction[@name="Distribute Shipment Status"]' businessTransactionIDREF="DistributeShipmentStatus_BT" fromRole='../Role[@name="TransportServiceProvider"]' fromRoleIDREF="TransportServiceProviderID" toRole='../Role[@name="In-transitInformationUser"]' toRoleIDREF="In-transitInformationUserID" isLegallyBinding="true" isConcurrent="false"/>
					<!--REM: The following shows a business transaction with two (one-pair) possible responses, each pair with a success and a failure.These are designed to reflect 	business level conditions only and not message level conditions such as Receipt Acknowledgements (ReceiptAck) and/or Notification of Failures (NoF). -->
					<!--REM:  Success Condition for Distribute Shipment Status-->
					<Success nameID="Start_ST" fromBusinessState='../BusinessTransactionActivity[@name="Distribute Shipment Status"]' conditionGuard="Success">
						<ConditionExpression expressionLanguage="XPath" expression='//BusinessServiceInformation/ProcessState="Success"'/>
					</Success>
					<!--REM:  Failure Condition for Distribute Shipment Status-->
					<Failure nameID="Failure_ST" fromBusinessState='../BusinessTransactionActivity[@name="Distribute Shipment Status"]' conditionGuard="BusinessFailure">
						<ConditionExpression expressionLanguage="XPath" expression='//BusinessServiceInformation/ProcessState="Failure"'/>
					</Failure>
				</BinaryCollaboration>
			</Package>
		</Package>
	</Package>
</ProcessSpecification>
