					<Failure nameID="Failure_ST" fromBusinessState='../BusinessTransactionActivity[@name="Request Return Product"]' conditionGuard="BusinessFailure">
						<ConditionExpression expressionLanguage="XPath" expression='//BusinessServiceInformation/ProcessState="Failure"'/>
