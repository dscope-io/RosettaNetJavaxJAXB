					<BusinessTransactionActivity name="Notify of Purchase Order Change Request" nameID="NotifyOfPurchaseOrderChangeRequest_BTA" businessTransaction='//BusinessTransaction[@name="Notify of Purchase Order Change Request"]' businessTransactionIDREF="NotifyOfPurchaseOrderChangeRequest_BT" fromRole='../Role[@name="Buyer"]' fromRoleIDREF="BuyerID" toRole='../Role[@name="Seller"]' toRoleIDREF="SellerID" isLegallyBinding="true" isConcurrent="false" timeToPerform="PT2H"/>
