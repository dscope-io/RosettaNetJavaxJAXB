					<Role name="Forecast Recipient" nameID="ForecastRecipientID"/>
					<Start nameID="Start_ST" toBusinessState='../BusinessTransactionActivity[@name="Notify Of Strategic Forecast"]' toBusinessStateIDREF="PIP4A1NotifyOfStrategicForecast"/>
					<BusinessTransactionActivity name="Notify Of Strategic Forecast" nameID="NotifyOfStrategicForecast_BTA" businessTransaction='//BusinessTransaction[@name="Notify Of Strategic Forecast"]' businessTransactionIDREF="NotifyOfStrategicForecast_BT" fromRole='../Role[@name="ForecastOwner"]' fromRoleIDREF="ForecastOwnerID" toRole='../Role[@name="ForecastRecipient"]' toRoleIDREF="ForecastRecipientID" isLegallyBinding="true" isConcurrent="false"/>
