					<BusinessTransactionActivity name="Request Purchase Order" nameID="RequestPurchaseOrder_BTA" businessTransaction='//BusinessTransaction[@name="Request Purchase Order"]' businessTransactionIDREF="RequestPurchaseOrder_BT" fromRole='../Role[@name="Buyer"]' fromRoleIDREF="BuyerID" toRole='../Role[@name="Seller"]' toRoleIDREF="SellerID" isLegallyBinding="true" isConcurrent="false" timeToPerform="PT24H"/>
