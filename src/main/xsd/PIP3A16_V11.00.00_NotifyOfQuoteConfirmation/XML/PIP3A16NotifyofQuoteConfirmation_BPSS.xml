<ProcessSpecification name="PIP3A16NotifyOfQuoteConfirmation" nameID="urn:rosettanet:specification:interchange:PIP3A16:xml:bpss:v11_00" version="V11.00" xmlns="http://www.ebxml.org/BusinessProcess/1.01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ebxml.org/BusinessProcess ebBPSS1.01.xsd">
	<Documentation>This PIP provides a buyer with quotes and referrals used to select suppliers and prepare purchase orders.</Documentation>
	<!--REM: Quote Confirmation Document-->
	<BusinessDocument name="Quote Confirmation" nameID="PIP3A16QuoteConfirmationNotification" specificationLocation="urn:rosettanet:specification:interchange:QuoteConfirmation:xsd:schema:1.0">
		<Documentation>A Seller's response to a request for a quote. Allows for an actual quote, or a referral to another Seller.</Documentation>
	</BusinessDocument>
	<Package name="Order Management" nameID="3">
		<Documentation>Defines Cluster</Documentation>
		<Package name="Quote and Order Entry" nameID="3A">
			<Documentation>Defines Segment</Documentation>
			<Package name="NotifyOfQuoteConfirmation" nameID="3A16">
				<Documentation>Defines PIP</Documentation>
				<BusinessTransaction name="Notify of Quote Confirmation" nameID="NotifyOfQuoteConfirmation_BT" isGuaranteedDeliveryRequired="true">
					<RequestingBusinessActivity name="Initiate Quote Confirmation Notification" nameID="InitiateQuoteConfirmationNotification" isAuthorizationRequired="true" isIntelligibleCheckRequired="true" isNonRepudiationReceiptRequired="true" isNonRepudiationRequired="true" timeToAcknowledgeReceipt="PT2H">
						<DocumentEnvelope name="Quote ConfirmationNotification" nameID="QuoteConfirmationNotification_DE" businessDocument='//BusinessDocument[@name="Quote Confirmation Notification"]' businessDocumentIDREF="PIP3A16QuoteConfirmationNotification" isAuthenticated="persistent" isConfidential="transient" isPositiveResponse="true" isTamperDetectable="persistent"/>
					</RequestingBusinessActivity>
					<RespondingBusinessActivity name="Process Quote Confirmation Notification" nameID="ProcessQuoteConfirmationNotification"/>
				</BusinessTransaction>
				<!--REM: Binary Collaborations-->
				<BinaryCollaboration name="Notify of Quote Confirmation" nameID="NotifyOfQuoteConfirmation_BC" initiatingRoleIDREF="BuyerID" preCondition="true" postCondition="true">
					<Documentation>The PIP Start State is comprised of the following conditions: a. TPA Approved and Exist In Backend System b. Sending Partner Exist as Party and Valid c. Receiving Partner Exist as Party d. Business Document Exist In Backend System, Valid, Non-Repudiated and Authorized </Documentation>
					<Documentation>The PIP End States are comprised of the following conditions: a. Acknowledgment of Receipt Exist In Backend System, Valid and Non-Repudiated b. Receiving Partner Authorized ; PIP Failure State: a. NOT Successful b. Retry Count Exceeded</Documentation>
					<Role name="Seller" nameID="SellerID"/>
					<Role name="Buyer" nameID="BuyerID"/>
					<Start nameID="Start_ST" toBusinessState='../BusinessTransactionActivity[@name="Notify of Quote Confirmation"]' toBusinessStateIDREF="PIP3A16NotifyOfQuoteConfirmation"/>
					<BusinessTransactionActivity name="Notify of Quote Confirmation" nameID="NotifyOfQuoteConfirmation_BTA" businessTransaction='//BusinessTransaction[@name="Notify of Quote Confirmation"]' businessTransactionIDREF="NotifyOfQuoteConfirmation_BT" fromRole='../Role[@name="Seller"]' fromRoleIDREF="SellerID" toRole='../Role[@name="Buyer"]' toRoleIDREF="BuyerID" isLegallyBinding="true" isConcurrent="false" timeToPerform="PT2H"/>
					<!--REM: The following shows a business transaction with two (one-pair) possible responses, each pair with a success and a failure.These are designed to reflect 
					business level conditions only and not message level conditions such as Receipt Acknowledgements (ReceiptAck) and/or Notification of Failures (NoF). -->
					<!--REM:  Success Condition for Notify of Quote Confirmation-->
					<Success nameID="Success_ST" fromBusinessState='../BusinessTransactionActivity[@name="Notify of Quote Confirmation"]' conditionGuard="Success">
						<ConditionExpression expressionLanguage="XPath" expression='//BusinessServiceInformation/ProcessState="Success"'/>
					</Success>
					<!--REM: Failure Condition for Notify of Quote Confirmation-->
					<Failure nameID="Failure_ST" fromBusinessState='../BusinessTransactionActivity[@name="Notify of Quote Confirmation"]' conditionGuard="BusinessFailure">
						<ConditionExpression expressionLanguage="XPath" expression='//BusinessServiceInformation/ProcessState="Failure"'/>
					</Failure>
				</BinaryCollaboration>
			</Package>
		</Package>
	</Package>
</ProcessSpecification>
